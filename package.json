{
  "name": "ddd-node",
  "version": "1.0.0",
  "description": "A CLI to scaffold Node.js projects with Domain-Driven Design structure",
  "license": "MIT",
  "author": "Your Name <you@example.com>",
  "homepage": "https://github.com/yourname/ddd-node#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourname/ddd-node.git"
  },
  "bugs": {
    "url": "https://github.com/yourname/ddd-node/issues"
  },

  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",

  "bin": {
    "ddd": "dist/cli.js"
  },

  "files": [
    "dist"
  ],

  "scripts": {
    "clean": "rm -rf dist",
    "build": "tsup src/cli.ts --format esm,cjs --dts",
    "dev": "tsup src/cli.ts --watch --onSuccess \"node dist/cli.js\"",
    "start": "node dist/cli.js",
    "prepare": "npm run build",
    "release": "npm publish --access public"
  },

  "dependencies": {
    "commander": "^12.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.14.9",
    "tsup": "^8.0.0",
    "typescript": "^5.6.0"
  },

  "keywords": [
    "ddd",
    "domain-driven-design",
    "cli",
    "scaffold",
    "generator",
    "nodejs",
    "typescript"
  ]
}
